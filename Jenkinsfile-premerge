pipeline {
    agent any

    environment {
        GIT_CREDENTIALS = credentials('BhanuPDas')
    }
    tools {
                maven 'Maven'
            }

    stages {

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }

    post {
        always {
            echo "Pipeline has completed"
        }
    }
}
